@model IEnumerable<AutoService.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<h2>Service Types</h2>
<br/>
<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a> 
    </p>
    <table class="table table-hover table-condensed">
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
               
                <td>@Html.DisplayFor(m=>item.Name)</td>
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a> | Delete </td>
            </tr>
        }
    </table>

</div>
